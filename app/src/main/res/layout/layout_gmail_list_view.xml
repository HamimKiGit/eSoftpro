<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/cyan_500"
            app:cardCornerRadius="25dp">
            <TextView
                android:id="@+id/gmailTitleLay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:textSize="25sp"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/gmailSubjectLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:layout_toRightOf="@id/card"
            android:layout_toEndOf="@id/card"
            />
        <TextView
            android:id="@+id/gmailTextLay"
            android:layout_below="@id/gmailSubjectLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/card"
            android:layout_toEndOf="@id/card"
            android:layout_toLeftOf="@id/gmailTimeLay"
            android:layout_toStartOf="@id/gmailTimeLay" />
        <TextView
            android:id="@+id/gmailTimeLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:textColor="@color/cyan_500"/>
        <TextView
            android:id="@+id/gmailDateLay"
            android:layout_below="@id/gmailTimeLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/cyan_400"/>
        <TextView
            android:id="@+id/gmailUidLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/gmailKeyLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>