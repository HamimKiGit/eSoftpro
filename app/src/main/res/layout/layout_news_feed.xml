<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/nfCardLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_margin="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/nfDpCardLay"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardElevation="7dp"
                app:cardCornerRadius="35dp"
                android:layout_margin="5dp">
                <ImageView
                    android:id="@+id/nfDpLay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/nfNameLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/nfDpCardLay"
                android:layout_toRightOf="@id/nfDpCardLay"
                />

            <TextView
                android:id="@+id/nfDateLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="12sp"
                android:layout_toEndOf="@id/nfDpCardLay"
                android:layout_below="@id/nfNameLay"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@id/nfDpCardLay" />
            <TextView
                android:id="@+id/nfTextViewLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nfDpCardLay"
                android:textAlignment="center"
                android:layout_marginTop="2dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/app_name"/>
            <ImageView
                android:id="@+id/nfImageViewLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nfTextViewLay"/>
            <TextView
                android:id="@+id/nfPushKeyLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/nfIdLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/nfFileUrlLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>