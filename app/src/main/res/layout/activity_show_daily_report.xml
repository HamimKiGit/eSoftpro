<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dailyreport.ShowDailyReport">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/showDailyBackArrowImg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:gravity="center_vertical"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/showDailySearchET"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="@string/enterName"
                android:layout_toEndOf="@id/showDailyBackArrowImg"
                android:layout_toRightOf="@id/showDailyBackArrowImg"
                android:layout_toStartOf="@id/showDailySearchImg"
                android:visibility="gone"
                android:layout_toLeftOf="@id/showDailySearchImg" />
            <TextView
                android:id="@+id/showDailyDateTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/dateEx"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_toEndOf="@id/showDailySearchET"
                android:layout_toRightOf="@id/showDailySearchET"
                android:visibility="visible"/>
            <ImageView
                android:id="@+id/showDailySearchImg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_search_black_24dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_toLeftOf="@id/showDailyAddImg"
                android:layout_toStartOf="@id/showDailyAddImg" />
            <ImageView
                android:id="@+id/showDailyAddImg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_add_black_24dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:visibility="visible"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ListView
        android:id="@+id/listViewShowDailyReport"
        android:layout_below="@id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>