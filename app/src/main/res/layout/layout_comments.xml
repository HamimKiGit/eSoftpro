<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_margin="2dp">
        <RelativeLayout
            android:id="@+id/mntRelativeLayoutLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/mntCardLay"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp">
                <ImageView
                    android:id="@+id/mntDpLay"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@color/colorPrimary"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/mntIdLay"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/mntNameLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:singleLine="true"
                android:layout_margin="5dp"
                android:layout_toEndOf="@id/mntCardLay"
                android:layout_toRightOf="@id/mntCardLay" />
            <TextView
                android:id="@+id/mntDateLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="12sp"
                android:layout_toEndOf="@id/mntCardLay"
                android:layout_below="@id/mntNameLay"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/mntCardLay"
                android:layout_marginStart="5dp" />
            <!--<ImageView-->
                <!--android:visibility="visible"-->
                <!--android:id="@+id/mntViewLay"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@drawable/ic_remove_red_eye_black_24dp"-->
                <!--android:layout_marginLeft="20dp"-->
                <!--android:layout_toEndOf="@id/mntDateLay"-->
                <!--android:layout_below="@id/mntNameLay"-->
                <!--android:layout_toRightOf="@id/mntDateLay"-->
                <!--android:layout_marginStart="10dp" />-->
            <!--<TextView-->
                <!--android:id="@+id/mntReplyCountLay"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_toEndOf="@id/mntViewLay"-->
                <!--android:layout_below="@id/mntNameLay"-->
                <!--android:textColor="#0a4b33"-->
                <!--android:layout_marginLeft="5dp"-->
                <!--android:layout_toRightOf="@id/mntViewLay"-->
                <!--android:layout_marginStart="5dp" />-->
            <ImageView
                android:id="@+id/mntDeleteLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete_red_24dp"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/mntTextViewLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mntCardLay"
                android:text="@string/app_name"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>