<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".myatnds.TakeAttendance">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cardCornerRadius="100dp">
            <ImageView
                android:id="@+id/dpTakeAttendance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/nameTakeAttendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/batchTakeAttendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="22sp"/>
        <TextView
            android:id="@+id/collegeTakeAttendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/timeTakeAttendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="22sp"/>
        <com.dlazaro66.qrcodereaderview.QRCodeReaderView
            android:id="@+id/qrTakeAttendance"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:visibility="gone"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/colorAccent"
        android:layout_gravity="bottom"
        android:layout_marginRight="50dp">
        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/changeBatch"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:text="ST"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/newChatEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/enrollment"
                android:layout_toEndOf="@id/changeBatch"
                android:layout_toRightOf="@id/changeBatch"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:inputType="textCapCharacters"
                android:backgroundTint="@color/colorAccent"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="25dp"
        android:layout_margin="5dp"
        android:layout_gravity="bottom|end"
        android:backgroundTint="@color/colorPrimaryDark">
        <ProgressBar
            android:id="@+id/takeAttendanceProgressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/takeAttendanceCounter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>